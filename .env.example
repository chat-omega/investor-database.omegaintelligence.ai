# OpenAI API Key (required for research)
OPENAI_API_KEY=sk-...

# Optional API Keys
OPENROUTER_API_KEY=
TAVILY_API_KEY=
ANTHROPIC_API_KEY=
LANGSMITH_API_KEY=

# Database Configuration
# Set to "dev" or "prod"
DB_ENVIRONMENT=dev

# For local development, use SQLite
USE_SQLITE=true

# For production, configure MySQL RDS
INVESTOR_DB_HOST=your-rds-endpoint.amazonaws.com
INVESTOR_DB_PORT=3306
INVESTOR_DB_NAME_DEV=investor_db_dev
INVESTOR_DB_NAME_PROD=investor_db
INVESTOR_DB_USER=investor_user
INVESTOR_DB_PASSWORD=your-password

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3003
